<?xml version="1.0" encoding="UTF-8"?>
<DcpTestSuiteExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="DCP-Testsuite-extension.xsd">
  
  <ForEach variableName="transition">
    <Set>
      <Test.transitions/>
    </Set>
    <If
      condition=" transition.sending != undefined &amp;&amp; transition.sending.stcRegister != undefined">
      <Update oldVariable="transition.sending.stcRegister.minorVersion"
        newVariable="slave.dcpMinorVersion"/>
      <Update oldVariable="transition.sending.stcRegister.majorVersion"
        newVariable="slave.dcpMajorVersion"/>
      <Update oldVariable="transition.sending.stcRegister.slaveUuid" newVariable="slave.uuid"/>
      <Update oldVariable="transition.sending.stcRegister.opMode" newVariable="1"/>
    </If>
  </ForEach>


  <!-- Alive -->
  
  <ExtensionSet state="0">

    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_prepare>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
        </STC_prepare>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_configure>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
        </STC_configure>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_initialize>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
        </STC_initialize>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_run>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
          <StartTime>
            <Invalid/>
          </StartTime>
        </STC_run>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    <If condition="slave.NRT == undefined">
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_do_step>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
          <Steps>
            <Value value="1"/>
          </Steps>
        </STC_do_step>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- NOT_SUPPORTED_PDU -->
            <Value value="16389"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    </If>
    <If condition="slave.NRT != undefined">
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_do_step>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
          <Steps>
            <Value value="1"/>
          </Steps>
        </STC_do_step>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    </If>
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_send_outputs>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
        </STC_send_outputs>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_stop>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
        </STC_stop>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_reset>
          <Receiver>
            <Value value="0"/>
          </Receiver>
          <StateId>
            <Invalid/>
          </StateId>
        </STC_reset>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    <?comment
    <AddTransition fromOffset="0" toOffset="1">
          <Sending>
            <DAT_input_output>
              <DataId>
                <Value value="1"/>
              </DataId>
              <SendingPayloadField pos="0">
                <Default valueReferenceVariable="1"/>
              </SendingPayloadField>
            </DAT_input_output>
          </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    ?>
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <INF_error>
          <Receiver>
            <Value value="0"/>
          </Receiver>
        </INF_error> 
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_nack>
          <Sender>
            <Value value="0"/>
          </Sender>
          <ErrorCode>
            <!-- PROTOCOL_ERROR_PDU_NOT_ALLOWED_IN_THIS_STATE -->
            <Value value="4099"/>
          </ErrorCode>
        </RSP_nack>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="2"/>
    
    <AddTransition fromOffset="0" toOffset="1">
      <Sending>
        <STC_unregister>
          <Receiver>
            <Value value="0"/>

          </Receiver>
          <StateId>
            <Value value="0"/>
          </StateId>
        </STC_unregister>
      </Sending>
    </AddTransition>
    <AddTransition fromOffset="1" toOffset="2">
      <Receiving>
        <RSP_ack>
          <Sender>
            <Value value="0"/>
          </Sender>
        </RSP_ack>
      </Receiving>
    </AddTransition>
    <AddTransition fromOffset="2" to="49">
      <Receiving>
        <NTF_state_changed>
          <Sender>
            <Value value="0"/>
          </Sender>
          <StateId>
            <Value value="0"/>
          </StateId>          
        </NTF_state_changed>
      </Receiving>
    </AddTransition>
    <UpdateMaxStep increase="3"/>
    

  </ExtensionSet>

</DcpTestSuiteExtension>